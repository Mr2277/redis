<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.mysql.mapper.DepartmentsMapper">
    <resultMap id="ResultDepartments" type="com.test.mysql.bean.Departments">
        <id column="dept_no" property="dept_no" />
        <result column="dept_name" property="dept_name" />
    </resultMap>
    <select id="selectByPrimaryKey" resultMap="ResultDepartments" parameterType="java.lang.String">
           SELECT * FROM departments WHERE dept_no=#{id}
    </select>
</mapper>
